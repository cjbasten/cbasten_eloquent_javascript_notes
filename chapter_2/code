/*only available in a browswer with the prompt function defined
let theNumber = Number(prompt("Pick a number"));
console.log("Your number is the square root of " + theNumber * theNumber);

let theNumber = Number(prompt("Pick a number"));
if (!Number.isNaN(theNumber)) {
    console.log("Your number is the square root of "
                  + theNumber * theNumber);
}
*/

if (1 + 1 == 2) console.log("It's true");


let number = 0;
while (number <= 12) {
    console.log(number);
    number = number + 2;
}

let result = 1;
let counter = 0;
while (counter < 10) {
    result = result * 2;
    counter = counter + 1;
}
console.log(result);

/*Applying the ! operator will convert a value to Boolean type before negating it, and all strings except "" convert to true. 
This means the loop continues going round until you provide a non-empty name.
let yourName;
do {
    yourName = prompt("Who are you?");
} while (!yourName);
console.log(yourName);
*/

for (let number = 0; number <= 12; number += 2) {
    console.log(number);
}

for (let current = 20; ; current = current + 1) {
    if (current % 7 == 0 ) {
        console.log(current);
        break;
    }
}

switch ("sunny") {
    case "rainy":
      console.log("Remember to bring an umbrella.");
      break;
    case "sunny":
      console.log("Dress lightly.");
    case "cloudy":
      console.log("Go outside.");
      break;
    default:
      console.log("Unknown weather type!");
      break;
  }